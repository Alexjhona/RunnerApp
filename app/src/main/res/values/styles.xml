<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Botón verde lleno -->
    <style name="Widget.RunnerApp.Button.GreenFilled" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/green_500</item>
        <item name="android:textColor">@color/on_green</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Botón blanco con borde fino -->
    <style name="Widget.RunnerApp.Button.WhiteOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/on_white</item>
        <item name="strokeColor">@color/stroke_200</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
