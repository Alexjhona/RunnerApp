<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- ====== HEADER ====== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/perf_title"
                android:textColor="@color/primary_fitness"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:letterSpacing="0.02"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/perf_subtitle"
                android:textColor="@color/text_muted"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:letterSpacing="0.01"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- ====== METRICS ====== -->
        <LinearLayout
            android:id="@+id/metricsStrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <!-- DISTANCE -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="@color/card_fitness"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_distance"
                        android:textSize="11sp"
                        android:textColor="@color/text_muted"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"/>

                    <TextView
                        android:id="@+id/tvCurrentDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1.25"
                        android:textColor="@color/performance_good"
                        android:textStyle="bold"
                        android:textSize="36sp"
                        android:includeFontPadding="false"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unit_km"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvDistanceRecord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="PB: 20.00"
                        android:textColor="@color/performance_excellent"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- AVG PACE (min/km) -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                app:cardBackgroundColor="@color/card_fitness"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_avg_speed"
                        android:textSize="11sp"
                        android:textColor="@color/text_muted"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"/>

                    <TextView
                        android:id="@+id/tvCurrentAvgSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="5:40"
                        android:textColor="@color/performance_good"
                        android:textStyle="bold"
                        android:textSize="36sp"
                        android:includeFontPadding="false"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unit_min_km"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvAvgSpeedRecord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="PB: 4:30"
                        android:textColor="@color/performance_excellent"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SPEED -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                app:cardBackgroundColor="@color/card_fitness"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_speed"
                        android:textSize="11sp"
                        android:textColor="@color/text_muted"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"/>

                    <TextView
                        android:id="@+id/tvCurrentSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0.0"
                        android:text="0"
                        android:textColor="@color/performance_average"
                        android:textStyle="bold"
                        android:textSize="32sp"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unit_kmh"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvMaxSpeedRecord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="MAX: 20.0"
                        android:textColor="@color/performance_excellent"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CALORIES -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                app:cardBackgroundColor="@color/card_fitness"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_calories"
                        android:textSize="11sp"
                        android:textColor="@color/text_muted"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"/>

                    <TextView
                        android:id="@+id/tvCaloriesBurned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="125"
                        android:text="0"
                        android:textColor="@color/accent_motivation"
                        android:textStyle="bold"
                        android:textSize="32sp"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unit_kcal"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvCaloriesPerMinute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="8.5/min"
                        android:text="@string/unit_cal_min"
                        android:textColor="@color/performance_good"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- ====== USER INFO ====== -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="@color/primary_fitness"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/steps_today"
                        android:textColor="@color/text_on_primary"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"/>

                    <TextView
                        android:id="@+id/tvSteps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/text_on_primary"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:background="@color/text_on_primary"
                    android:alpha="0.3"
                    android:layout_marginHorizontal="20dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/athlete_profile"
                        android:textColor="@color/text_on_primary"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"/>

                    <TextView
                        android:id="@+id/tvUserProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Runner - 70kg"
                        android:textColor="@color/text_on_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ====== DIVIDER ====== -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/surface"
            android:alpha="0.6"
            android:layout_marginVertical="8dp" />

        <!-- ====== CHRONOMETER ====== -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="@color/secondary_fitness"
            app:cardCornerRadius="24dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:id="@+id/chronoPanel"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:paddingHorizontal="32dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/workout_time"
                        android:textColor="@color/text_on_primary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"/>

                    <TextView
                        android:id="@+id/tvChrono"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/init_stop_watch_value"
                        android:textColor="@color/text_on_primary"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/round_label"
                        android:textColor="@color/text_on_primary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"/>

                    <TextView
                        android:id="@+id/tvRound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/text_on_primary"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ====== MAP CHIP ====== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/btnMap"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:gravity="center_vertical"
                android:text="@string/map_label"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:drawableStartCompat="@android:drawable/ic_menu_mylocation"
                app:drawableEndCompat="@android:drawable/arrow_down_float"
                android:drawablePadding="8dp"
                android:background="@drawable/map_chip"/>
        </LinearLayout>

        <!-- ====== START / STOP ====== -->
        <androidx.cardview.widget.CardView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="40dp"
            app:cardBackgroundColor="@color/primary_fitness"
            app:cardCornerRadius="120dp"
            app:cardElevation="16dp">

            <LinearLayout
                android:id="@+id/btStart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ready_to"
                    android:textColor="@color/text_on_primary"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.02"/>

                <TextView
                    android:id="@+id/btStartLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start"
                    android:textColor="@color/text_on_primary"
                    android:textSize="36sp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.02"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/training_q"
                    android:textColor="@color/text_on_primary"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.02"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ====== GOAL HUD ====== -->
        <TextView
            android:id="@+id/tvGoalHud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:background="@drawable/bg_goal_pill"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:visibility="gone"
            android:text="Goal: 30 min · 5 km"/>

        <!-- ====== MODOS ====== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:baselineAligned="false"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:id="@+id/lySportBike"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:background="@drawable/mode_bg_unselected">

                <ImageView
                    android:id="@+id/ivSportBike"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_bike"
                    app:tint="@color/text_secondary"
                    android:contentDescription="@string/desc_bike_icon"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lySportSkate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:background="@drawable/mode_bg_selected">

                <ImageView
                    android:id="@+id/ivSportSkate"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_skate"
                    app:tint="@color/white"
                    android:contentDescription="@string/desc_skate_icon"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lySportRun"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:background="@drawable/mode_bg_unselected">

                <ImageView
                    android:id="@+id/ivSportRun"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_run"
                    app:tint="@color/text_secondary"
                    android:contentDescription="@string/desc_run_icon"/>
            </LinearLayout>
        </LinearLayout>

        <!-- ====== INTERVALS & GOAL CARDS ====== -->
        <include layout="@layout/view_intervals_card"/>
        <include layout="@layout/view_goal_card"/>
        <include layout="@layout/view_card_audio_settings" />

    </LinearLayout>
</ScrollView>
