<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/banner_image"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/banner"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/banner_description" />

        <TextView
            android:id="@+id/motivational_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frase_motivadora"
            android:textColor="#FFA500"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/correo"
            android:inputType="textEmailAddress"
            android:autofillHints="emailAddress"
            android:backgroundTint="#FFFFFF"
            android:textColorHint="#99FFFFFF"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/contrasena"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:backgroundTint="#FFFFFF"
            android:textColorHint="#99FFFFFF"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <!-- BotÃ³n de inicio de sesiÃ³n (VERDE) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_button"
            style="@style/Widget.RunnerApp.Button.GreenFilled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/iniciar_sesion"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/olvidaste_contrasena"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/btn_go_to_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¿No tienes cuenta? RegÃ­strate aquÃ­"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Google (BLANCO con borde + icono sin tinte) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/google_button"
            style="@style/Widget.RunnerApp.Button.WhiteOutlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/google_login"
            app:icon="@drawable/google"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@null"
            app:rippleColor="@color/stroke_200"
            android:layout_marginTop="12dp" />

        <!-- Facebook (BLANCO con borde + icono sin tinte) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/facebook_button"
            style="@style/Widget.RunnerApp.Button.WhiteOutlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/facebook_login"
            app:icon="@drawable/facebook"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@null"
            app:rippleColor="@color/stroke_200"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/text_guest_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸš¨ Ingresar sin registrarme"
            android:textColor="#FF6D6D"
            android:textSize="12sp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>
</ScrollView>
