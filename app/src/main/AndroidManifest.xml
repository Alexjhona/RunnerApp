<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos base -->
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Foreground service -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- Android 14+ -->
    <uses-permission
        android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK"
        tools:targetApi="34" />
    <!-- Added foreground service permissions for background tracking -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" 
        tools:targetApi="34" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- Android 13+ Notificaciones -->
    <uses-permission
        android:name="android.permission.POST_NOTIFICATIONS"
        tools:targetApi="33" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- Added background location permission for continuous tracking -->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" 
        tools:targetApi="29" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RunnerApp">

        <!-- SPLASH: pantalla de arranque -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.RunnerApp.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Pantallas de la app (sin MAIN/LAUNCHER) -->
        <activity
            android:name=".ProfileQuestionnaireActivity"
            android:exported="false"
            android:theme="@style/Theme.RunnerApp.Main"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.RunnerApp.Main" />

        <activity
            android:name=".HistorialActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".RunDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.RunnerApp.Main"
            android:parentActivityName=".HistorialActivity" />

        <activity
            android:name=".AchievementsActivity"
            android:exported="false" />

        <!-- Added new GoalsActivity to manifest -->
        <activity
            android:name=".GoalsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Added StatisticsActivity -->
        <activity
            android:name=".StatisticsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Added BMICalculatorActivity -->
        <activity
            android:name=".BMICalculatorActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".RegisterActivity"
            android:exported="false" />

        <!-- Ya no es LAUNCHER -->
        <activity
            android:name=".LoginActivity"
            android:exported="true" />

        <!-- Added missing workout and hydration activities -->
        <activity
            android:name=".WorkoutRoutinesActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".WorkoutSessionActivity"
            android:exported="false"
            android:parentActivityName=".WorkoutRoutinesActivity" />

        <activity
            android:name=".ExerciseProgressActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".HydrationActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Servicio de mÃºsica en primer plano -->
        <service
            android:name=".MusicService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

        <activity
            android:name=".MusicActivity"
            android:exported="false" />

        <!-- Added broadcast receivers for hydration notifications -->
        <receiver
            android:name=".HydrationReminderReceiver"
            android:exported="false" />

        <receiver
            android:name=".QuickAddWaterReceiver"
            android:exported="false" />

        <!-- Added fitness widget provider -->
        <receiver
            android:name=".FitnessWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.runnerapp.widget.PLAY_MUSIC" />
                <action android:name="com.example.runnerapp.widget.UPDATE_STEPS" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>

        <!-- Added fitness tracking service -->
        <service
            android:name=".FitnessTrackingService"
            android:exported="false"
            android:foregroundServiceType="location" />

    </application>
</manifest>
